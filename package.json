{
  "name": "pnpm-esbuild-node-api",
  "version": "1.0.0",
  "description": "A simple Node.js API using ESBuild and Express with TypeScript Ready for any database",
  "main": "index.js",
  "scripts": {
    "start": "node ./build/server",
    "dev": "nodemon",
    "build": "rimraf build && etsc",
    "build:watch": "etsc --watch",
    "init:tsc": "tsc --init",
    "make:resource": "etsc && node ./build/scripts/make-resource.js",
    "make:controller": "etsc && node ./build/scripts/make-controller.js",
    "make:service": "etsc && node ./build/scripts/make-service.js",
    "make:schema": "etsc && node ./build/scripts/make-schema.js",
    "make:route": "etsc && node ./build/scripts/make-route.js"
  },
  "keywords": [
    "pnpm",
    "esbuild",
    "node-api",
    "nodejs",
    "javascript",
    "typescript",
    "REST API",
    "Express",
    "JSON",
    "JSON Web Token",
    "JWT",
    "Authentication",
    "Authorization",
    "Middleware",
    "Error Handling",
    "Validation",
    "API Documentation"
  ],
  "author": "Ashirbad Panigrahi",
  "license": "ISC",
  "devDependencies": {
    "@types/bcryptjs": "^2.4.6",
    "@types/cors": "^2.8.17",
    "@types/express": "^5.0.0",
    "@types/http-errors": "^2.0.4",
    "@types/jsonwebtoken": "^9.0.8",
    "@types/nodemailer": "^6.4.17",
    "esbuild": "^0.25.0",
    "esbuild-node-tsc": "^2.0.5",
    "nodemon": "^3.1.9",
    "rimraf": "^6.0.1",
    "typescript": "^5.7.3"
  },
  "dependencies": {
    "bcryptjs": "^2.4.3",
    "cors": "^2.8.5",
    "dotenv": "^16.4.7",
    "express": "^4.21.2",
    "express-validator": "^7.2.1",
    "helmet": "^8.0.0",
    "http-errors": "^2.0.0",
    "jsonwebtoken": "^9.0.2",
    "nodemailer": "^6.10.0",
    "socket.io": "^4.8.1",
    "zod": "^3.24.1"
  }
}
